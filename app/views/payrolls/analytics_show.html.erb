<h1>Analytics for Payroll from <%= @payroll.start_date %> to <%= @payroll.end_date %></h1>
<br>
<div class="well well-lg">
  <div class="container">
    <div class="row">
      <div class="well well-sm col-sm" style="margin-right: 15px;">
        <h2><b><u>Hourly Employee Statistics</u></b></h2>
        <div style="margin: 15px 0 0 30px;">
          <% @hour_types.each_with_index do |hour_type, index|  %>
          <p><%= "#{@display_hours[index]} Total: #{Paycheck.total_hours(@hourly_paychecks, hour_type)}" %>
            <% end %>
          <p>OT Hours Total: <%= Paycheck.total_hours(@hourly_paychecks, "ot_hours") %></p>
          <hr>
          <p>Total Hourly Payout: $<%= @hourly_payout_sum %></p>
        </div>
      </div>

      <div class="well well-sm col-sm" style="margin-left: 15px;">
        <h2><b><u>Salary Employee Statistics</u></b></h2>
        <div style="margin: 15px 0 0 30px;">
          <% @hour_types.each_with_index do |hour_type, index|  %>
          <p><%= "#{@display_hours[index]} Total: #{Paycheck.total_hours(@salary_paychecks, hour_type)}" %>
            <% end %>
          <p>OT Hours Total: <%= Paycheck.total_hours(@salary_paychecks, "ot_hours") %></p>
          <hr>
          <p>Total Salary Payout: $<%= @salary_payout_sum %></p>
        </div>
      </div>
    </div>

    <br>

    <div class="row">
      <div class="well well-sm col-sm text-center">
        <h2><b>Total Payout: $<%= @total_payout_sum %></b></h2>
        <p></p>
      </div>
    </div>
  </div>
</div>
